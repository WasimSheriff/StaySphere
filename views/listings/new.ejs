<% layout("/layouts/boilerplate")%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>StayShepre</title>
</head>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h3>Create a new listing</h3>
            <form method="POST" action="/listings">

                <div class="mb-3">
                    <label for="title" class="from-label">Title</label>
                    <input name="listing[title]" placeholder="Enter title" type="text" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="description" class="from-label">Description</label>
                    <textarea name="listing[description]" class="form-control"></textarea>
                </div>
                <div class="mb-3">
                    <label for="image" class="from-label">Image</label>
                    <input name="listing[image]" placeholder="Enter image URL" type="text" class="form-control">
                </div>
                <div class="row">
                    <div class="mb-3 col-4">
                        <label for="price" class="from-label">Price</label>
                        <input name="listing[price]" placeholder="Enter price" type="number" class="form-control">
                    </div>
                    <div class="mb-3 col-8">
                        <label for="country" class="from-label">Country</label>
                        <input name="listing[country]" placeholder="Enter country" type="text" class="form-control">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="from-label">Location</label>
                    <input name="listing[location]" placeholder="Enter location" type="text" class="form-control">
                </div>
                <button class="btn btn-dark add-btn mb-3 mt-3">Add</button>
            </form>
        </div>
    </div>
</body>
</html>